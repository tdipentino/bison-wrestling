{{> header }}
{{> nav }}

<div class="container" style="text-align: center;">
	<h1 class="mainH1">2017-2018 Coaches</h1>
	<br>
	<hr class="style13">
	<br>
</div>

<div class="container">
	<div class="row">
		{{#each components.bison-coaches}}

			<div class="col-md-4" style="display:flex;justify-content:center;align-items:center;">
				<div class="grid mask">
					<div style="text-align:center;">
						<p>
							<a href="#{{firstname}}{{lastname}}" data-toggle="modal" data-target="#{{firstname}}{{lastname}}">
								<img class="img-responsive" src="{{img_dir}}" alt="{{firstname}} {{lastname}}" style="width:100%; height:100%;" />
							</a>
						</p>
						<h3>{{firstname}} {{lastname}}</h3>
						<h6>{{title}}</h6>
						<br>
						<br>
					</div>
				</div>
			</div>

			<!-- The Modal -->
			<div class="modal fade bd-modal-lg" id="{{firstname}}{{lastname}}" tabindex="-1" role="dialog" aria-labelledby="Coach{{firstname}}{{lastname}}" aria-hidden="true">
				<div class="modal-dialog modal-lg">
					<div class="modal-content">
						<!-- Modal Header -->
						<div class="modal-header">
			        <h2 class="mainH2 modal-title" id="Coach{{firstname}}{{lastname}}">Coach {{firstname}} {{lastname}}</h2>
			        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
			          <span aria-hidden="true">&times;</span>
			        </button>
			      </div>
						<!-- Modal body -->
						<div class="modal-body">
							<p><img class="img-responsive" src="{{img_dir}}" alt="{{firstname}} {{lastname}}" style="width:100%; height:100%;" /></p>
							<h3 class="modal-title" style="color: #0c1c3c;">{{title}}</h3>
							<hr class="style13">
							<h4 class="centered">BIO:</h4>
							{{bio}}
						</div>
						<!-- Modal footer -->
						<div class="modal-footer">
			        <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
			      </div>
					</div>
				</div>
			</div>

			{{/each}}
		</div>
</div>

{{> footer }}
